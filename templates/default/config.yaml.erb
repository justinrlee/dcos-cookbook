---
<%- @config.each do |k, v| %>
  <%- next if %w(agent_list public_agent_list master_list resolvers rexray).include?(k) %>
<%= k %>: '<%= v %>'
<% end %>
<% %w(agent_list public_agent_list master_list resolvers).each do |n| %>
  <% if @config.key?(n) && !@config[n].empty? %>
<%= n %>:
    <% @config[n].each do |i| %>
  - <%= i %>
    <% end %>
  <% end %>
<% end %>
<% unless @config['rexray_config'].nil? || @config['rexray_config'].empty? %>
  <% require 'yaml' %>
rexray_config:
  <%- @config['rexray_config'].to_hash.dup.to_yaml.lines.drop(1).each do |l| %>
  <%= l.chomp %>
  <% end %>
<% end %>
